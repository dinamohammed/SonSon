<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="loan_view_hr_payslip_form" model="ir.ui.view">
            <field name="name">loan.hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="loans" string="Loans">
                        <field name="loan_line_ids" readonly="1">
                            <tree>
                                <field name="loan_id"/>
                                <field name="date"/>
                                <field name="amount" sum="total_loans"/>
                                <field name="paid" readonly="1" invisible="1"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right" colspan="2" >
                            <field name="total_loans" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>